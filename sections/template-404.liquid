<div class="max-w-md">
    <div class="text-5xl font-bold my-4">
        {{ section.settings.title }}
    </div>
    <div class="my-5">
        <div class="text-base md:text-xl leading-normal">
            {{ section.settings.subtitle }}
        </div>
    </div>
    <div class="my-4">
        {% if section.settings.button_url == blank %}
            {%  assign  shop_url = shop.secure_url  %}
        {% else %}
            {% assign shop_url = section.settings.button_url %}    
        {% endif %}
        <a class="px-4 inline py-2 text-base font-medium shadow bg-green hover:bg-green-800 text-white" href="{{ shop_url }}"> {{ section.settings.button_title }}</a>
    </div>
</div>

{% schema %}
{
    "name": "template-404",
    "tag": "section",
    "class": "flex items-center justify-center text py-7 h-full",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "404 Title",
            "default": "404"
        },
        {
            "type": "text",
            "id": "subtitle",
            "label": "404 Sub Title",
            "default": "Page Not Found"

        },
        {
            "type": "text",
            "id": "button_title",
            "label": "Button Title",
            "default": "Back To Home"

        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Button url"

        }
        ]
}
{% endschema %}