{% for block in section.blocks %}
    {% case block.type %}
        {% when 'airtcle_author' %}
            <h1>{{ article.title }}</h1>            
        {% else %}
            
    {% endcase %}
{% endfor %}



{% if section.settings.enable_author %}
    <small>{{ article.author }}</small>    
{% endif %}

{% if section.settings.enable_publihsed_date %}
    <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: '%Y-%m-%d' }}</time>    
{% endif %}

<img src="{{ article.image  | img_url: 'large' }}" alt="{{ article.image.alt }}" width="1024" height="1024">

<div>
    {{ article.content }}
</div>

{% schema %}
{
    "name": "Article Template",
    "settings": [
            {
                "type": "checkbox",
                "id": "enable_author",
                "default" : true,
                "label": "Display Author Name"
            }, 
            {
                "type": "checkbox",
                "id": "enable_publihsed_date",
                "default" : true,
                "label": "Display Published Date"

            }
        ], 
        "blocks": [
            {
                "type": "article_title",
                "name": "Title",
                "limit": 1
            },
            {
                "type": "article_author",
                "name": "Author",
                "limit": 1
            },
            {
                "type": "article_published_date",
                "name": "Published Date",
                "limit": 1
            },
            {
                "type": "article_img",
                "name": "Featured Image",
                "limit": 1
            },
            {
                "type": "article_content",
                "name": "Content",
                "limit": 1
            }
        ]
}
{% endschema %}
