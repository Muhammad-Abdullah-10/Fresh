<style>
/* understanding-wisconsin */
.understanding-wisconsin {
    padding: 5%;
    position: relative;
}
.understanding-wisconsin .absolute-bg-white{
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: #fff;
    opacity: 0.9;
    z-index: 10;
}
.understanding-wisconsin .title h2{
    color: #000;
    font-family: Poppins;
    font-weight: 700;
    font-size: 48px;
    line-height: 120%;
    letter-spacing: 0%;
    text-align: center;
    z-index: 100;
}
.understanding-wisconsin .two-side-content{
    padding: 0 10% 0 5%;
    justify-content: space-between;
}
.understanding-wisconsin .two-side-content ,.understanding-wisconsin .two-side-content *{
    z-index: 100;
}
.understanding-wisconsin .two-side-content h3{
    font-family: Poppins;
    font-weight: 700;
    font-size: 18px;
    line-height: 100%;
    letter-spacing: 0%;
    line-height: 26px;
    color: #dd140e; 
}
.understanding-wisconsin .two-side-content p{
    font-family: Poppins;
    font-weight: 500;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: 0%;

}
.understanding-content-right{
    display: flex;
    justify-content: flex-end;
}
.understanding-content-right .understanding-image{
    object-fit: cover;
    height: 100%;
    max-height: 800px;
    max-width: 500px;

}
@media (max-width:1350px) {
    .understanding-content-right .understanding-image{
        max-width: 375px;
    }
    .understanding-wisconsin .two-side-content{
        padding: 0% 5% 0% 5%;
    }
}
@media (max-width:991px){
    .understanding-content-right{
        justify-content: center;
    }
    .understanding-content-right .understanding-image{
        max-width: 100%;
    }
}
@media (max-width:767px){
    .understanding-wisconsin{
        padding: 50px 10px;
    }
    .understanding-wisconsin .title h2{
        font-size: 40px;
    }
    .understanding-wisconsin .two-side-content{
        padding: 20px 15px;
    }
}

</style>


<section class="understanding-wisconsin container-fluid" 
style="background: url('{{ section.settings.background_image_wis |  image_url : 'original'   }}');background-position: top center; background-size: cover;">
    <div class="absolute-bg-white"></div>
    <div class="title d-flex justify-content-center">
        <h2>{{  section.settings.title_title_wis }}</h2>
    </div>
    <div class="row two-side-content py-5 flex-column flex-lg-row">
        <div class="col-sm-12 col-lg-6 understanding-content-left">
            <h3 class="understanding-heading-red">
                {{ section.settings.red_heading_wis }}
            </h3>
            <p>
               {{ section.settings.description_wis }}
            </p>
        </div>
        <div class="col-sm-12 col-lg-6 understanding-content-right">
            <img class="understanding-image" src="{{ section.settings.main_banner_image | img_url: 'original' }}" alt="Window Tint Image">
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Understanding Wisconsin",
    "settings": [
        {
            "type": "image_picker",
            "id": "background_image_wis",
            "label": "Background Image"
        },
        {
            "type": "text",
            "id": "title_title_wis",
            "label": "Main Heading",
            "default": "Understanding Wisconsin Window Tint Laws"
        },
        {
            "type": "text",
            "id": "red_heading_wis",
            "label": "Red Heading",
            "default": "At Detail Doctors, we prioritize your compliance with Wisconsin’s window tint regulations. It’s essential to be informed about the laws governing window tinting to ensure a smooth driving experience. Here’s a breakdown of Wisconsin’s window tint laws:"
        },
        {
            "type": "richtext",
            "id": "description_wis",
            "label" : "Add Details"

        }
        ,
        {
            "type": "image_picker",
            "id": "main_banner_image",
            "label": "Image Right"
        }

    ],
    "presets": [
        {
        "name": "Understanding Wisconsin",
        "category": "Custom Sections"
        }
    ]
}
{% endschema %}