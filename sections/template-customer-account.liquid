<div class="max-w-2xl mx-auto py-16 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
    <h1 class="text-2xl font-bold text-gray-700">Accounts</h1>
    <div class="block md:flex gap-4 ">
        {% assign number_of_order =  customer.orders |  size %}
        {% if number_of_order > 0 %}
            <div class=" w-full my-5 md:my-12">
                <h2 class=" text-gray-700 font-bold texl-xl">Order History</h2>
                <div class=" mt-6 grid grid-cols-1 gap-y-10 gap-x-6  sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
                    {% paginate customer.orders by 10 %}
                        {% for order in customer.orders %}
                            <div class="relative">
                                <div class="w-full min-h-80 bg-gray-200 rounded-md overflow-hidden lg:h-80">
                                    {% if order.line_items.first.image %}
                                        <img src="{{ order.line_items.first.image |  img_url : 'medium' }}" alt="" class="w-full h-full object-cover object-center">
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    {% endpaginate %}
                </div>
            </div>
            {% else %}
            <div class=" w-full h-80 flex items-center justify-center">
                <h2 class=" text-base md:text-2xl font-medium">You currently don't have any orders</h2>
            </div>  
        {% endif %}
    </div>
</div>