<style>
    
/* cooler-car-wrapper */
.cooler-car-wrapper{
    background: #000;
    padding:5% 10%;
    max-width: 100%;

}
.cooler-car-wrapper .main-row{
    align-items: center;
}
.cooler-car-wrapper .left-img-wrapper{
    width: 60%;
    display: grid;
    grid-template-rows: 1fr 1fr;
}
.cooler-car-wrapper .right-content-wrapper{
    width: 40%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-self: center;
    padding-left: 5%;
    justify-content: center;
    color: #fff;
}
.cooler-car-wrapper .right-content-wrapper .content{
    height: auto;
    width: auto;
    padding: 0;
    background: transparent;
}
.cooler-car-wrapper .right-content-wrapper .content h3{
    font-family: Poppins;
    font-weight: 900;
    font-size: 14.88px;
    line-height: 17.6px;
    letter-spacing: 0.96px;
    text-align: left;
    text-transform: uppercase;

}
.cooler-car-wrapper .right-content-wrapper .content h2{
    font-family: Poppins;
    font-weight: 600;
    font-size: 41.63px;
    line-height: 52.8px;
    letter-spacing: -0.48px;
    vertical-align: middle;

}
.cooler-car-wrapper .right-content-wrapper .content  p{
    font-family: Poppins;
    font-weight: 400;
    font-size: 18px;
    line-height: 27px;
    letter-spacing: 0.18px;
    vertical-align: middle;

}
.cooler-car-wrapper .left-img-wrapper .top-two-images{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding-bottom: 30px;
}
.cooler-car-wrapper .left-img-wrapper .top-two-images img{
    max-width: 48%;
    object-fit: cover;
    max-height: 350px;
}
.cooler-car-wrapper .bottom-one-img{
    display: flex;
}
.cooler-car-wrapper .left-img-wrapper .top-two-images .top-left-img{
    border-top-left-radius: 10px ;
}
.cooler-car-wrapper .left-img-wrapper .top-two-images .top-right-img{
    border-top-right-radius: 10px ;
}
.cooler-car-wrapper .bottom-one-img img{
    width: 100%;
    object-fit: cover;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    max-height: 350px;
}

@media (max-width:767px) {
    .cooler-car-wrapper {
        background: #000;
        padding: 15% 5%;
        max-width: 100%;
    }
    .cooler-car-wrapper .left-img-wrapper{
        width: 100%;
        grid-template-rows: auto;
    }
    .cooler-car-wrapper .right-content-wrapper{
        width: 100%;
    }
    .cooler-car-wrapper .left-img-wrapper .top-two-images{
        flex-direction: column;
    }
    .cooler-car-wrapper .left-img-wrapper .top-two-images img,
    .cooler-car-wrapper .bottom-one-img img{
        width: 90%;
        max-width:90% ;
        margin: auto;
    }
    .cooler-car-wrapper .bottom-one-img{
        height: auto;
    }
    .cooler-car-wrapper .bottom-one-img img{
        height: 300px;
        margin: 0 auto;
    }
    .cooler-car-wrapper .left-img-wrapper .top-two-images .top-left-img{
        margin-bottom: 20px;
    }
    .cooler-car-wrapper .left-img-wrapper .top-two-images .top-left-img,
    .cooler-car-wrapper .bottom-one-img img,
    .cooler-car-wrapper .left-img-wrapper .top-two-images .top-right-img
    {
        border-radius: 10px ;
    }
    .cooler-car-wrapper .right-content-wrapper{
        padding-left: 0;
    }
    .cooler-car-wrapper .right-content-wrapper .content{
        padding: 35px 15px ;
    }
    
}
</style>

<section class="cooler-car-wrapper container-fluid">
    <div class="row main-row">
        <div class="left-img-wrapper">
            <div class="top-two-images">
                <img src="{{ section.settings.top_left_image | img_url : 'original' }}" alt="" class="top-left-img img-fluid">
                <img src="{{ section.settings.top_right_image | img_url : 'original' }}" alt="" class="top-right-img img-fluid">
            </div>
            <div class="bottom-one-img">
                <img src="{{ section.settings.bottom_image | img_url : 'original' }} " class="bottom-img img-fluid" alt="">
            </div>
        </div>
        <div class="right-content-wrapper">
            <div class="content">
                <h3>
                    {{ section.settings.subtitle }}
                </h3>
                <h2>
                    {{section.settings.title}}
                </h2>
                <p>
                    {{ section.settings.cooler_description }}
                </p>
            </div>
        </div>
    </div>
</section>


{% schema %}
{
    "name": "Car Got Cooler",
    "settings": [    
        {
            "type": "image_picker",
            "id": "top_left_image",
            "label": "Add Top Left Image"
        },
        {
            "type": "image_picker",
            "id": "top_right_image",
            "label": "Add Top Right Image"
        },
        {
            "type": "image_picker",
            "id": "bottom_image",
            "label": "Add Bottom Image"
        },
        {
            "type": "text",
            "id": "subtitle",
            "label" : "Add Sub Title",
            "default" : "Automotive Window Film"
        },
        {
            "type": "text",
            "id": "title",
            "label" : "Add Title",
            "default" : "Your Car Just Got Cooler"
        },
        {
            "type": "text",
            "id": "cooler_description",
            "label" : "Add Description",
            "default" : "Feel the difference, before and after. Before installation of XPEL Automotive Window Film, your carâ€™s cabin could reach scorching temps. After application, enjoy up to 60% less heat inside, providing a cooler and more enjoyable ride."
        }
    ],
    "presets": [
     {
        "name": "Car Got Cooler",
        "category": "Custom Sections"
     }   
    ]
}
{% endschema %}